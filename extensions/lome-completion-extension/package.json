{
	"name": "lome-completion-extension",
	"description": "A language server based Lome completion extension",
	"author": "Todd Saharchuk",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/northerntechie/lome"
	},
	"publisher": "lome",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/lib/extension",
	"contributes": {
		"languages": [
			{
				"id": "lomemarkdown",
				"extensions": [
					".md",
					".mdl"
				],
				"aliases": [
					"lome",
					"Lome",
					"Lome markdown"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"build": "tsc -p .",
		"clean": "yarn cache clean --all",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"prepare": "yarn run compile && yarn symlink",
		"vscode:prepublish": "npm run compile",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/vscode": "^1.32.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
